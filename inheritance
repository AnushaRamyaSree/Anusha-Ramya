class Sample
{
    int l=10;
    int b=20;
    int s=30;
}
class Square extends Sample
{
    int area;
    void calarea()
    {
        area=s*s;
        System.out.println(area);
    }
}
class Rectangle extends Sample
{
    int perimeter;
    void calperimeter()
    {
        perimeter=2*(l+b);
        System.out.println(perimeter);
    }
}
class Main{
public static void main(String args[])
{
    Square s=new Square();
    Rectangle t=new Rectangle();
      s.calarea();
      t.calperimeter();
}
}
